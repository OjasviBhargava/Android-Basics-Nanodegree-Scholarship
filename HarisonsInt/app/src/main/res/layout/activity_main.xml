<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ojasvi.harisonsint.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_350dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Headline"
            android:fitsSystemWindows="true"
            >

       <ImageView
           app:layout_collapseMode="parallax"
           android:src="@drawable/hari"
           android:contentDescription="@string/content"
           android:scaleType="centerCrop"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dimen_350dp" />

           <android.support.v7.widget.Toolbar
               android:id="@+id/toolbar"
               android:layout_width="match_parent"
               android:layout_height="?attr/actionBarSize"
               app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
               android:title="@string/comp_name"
               app:layout_collapseMode="pin"
               />


       </android.support.design.widget.CollapsingToolbarLayout>

   </android.support.design.widget.AppBarLayout>

   <android.support.v4.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:clipToPadding="false"
       app:layout_behavior="@string/appbar_scrolling_view_behavior">

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="@dimen/dimen_16dp"
           app:cardElevation="@dimen/dimen_5dp"
           app:cardUseCompatPadding="true">

           <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <ImageView
                   android:contentDescription="@string/abt"
                   android:src="@drawable/ic_about"
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/dimen_50dp"
                   android:paddingLeft="@dimen/dimen_5dp"
                   android:layout_marginTop="@dimen/dimen_12dp"/>

               <TextView
                   android:id="@+id/about_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dimen_12dp"
                   android:padding="@dimen/dimen_12dp"
                   android:text="@string/abt"
                   android:textColor="@color/colorPrimaryDark"
                   android:textSize="@dimen/dimen_20sp"
                   android:textStyle="bold" />

           </LinearLayout>


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dimen_6dp"
                   android:padding="@dimen/dimen_12dp"
                   android:text="@string/about_comp"
                   android:textColor="@color/colorPrimaryText"
                   android:textSize="@dimen/dimen_18sp"
                   android:textStyle="bold" />



               <View
                   android:layout_width="fill_parent"
                   android:layout_height="@dimen/dimen_2dp"
                   android:background="@color/lineColor"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <ImageView
                   android:contentDescription="@string/open"
                   android:src="@drawable/ic_clock"
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/dimen_50dp"
                   android:paddingLeft="@dimen/dimen_5dp"
                   android:layout_marginTop="@dimen/dimen_12dp"/>


               <TextView

                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_weight="9"
                   android:padding="@dimen/dimen_12dp"
                   android:text="@string/open"
                   android:textColor="@color/colorPrimaryDark"
                   android:textSize="@dimen/dimen_20sp"
                   android:textStyle="bold" />

           </LinearLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_weight="9"
                   android:lineSpacingMultiplier="1.5"
                   android:padding="@dimen/dimen_12dp"
                   android:text="@string/time"
                   android:textColor="@color/colorPrimaryText"
                   android:textSize="@dimen/dimen_18sp" />

               <View
                   android:layout_width="fill_parent"
                   android:layout_height="@dimen/dimen_2dp"
                   android:background="@color/lineColor"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <ImageView
                   android:contentDescription="@string/call"
                   android:src="@drawable/ic_call"
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/dimen_50dp"
                   android:paddingLeft="@dimen/dimen_5dp"
                   android:layout_marginTop="@dimen/dimen_12dp"/>

               <TextView

                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_weight="9"
                   android:padding="@dimen/dimen_12dp"
                   android:text="@string/call"
                   android:textColor="@color/colorPrimaryDark"
                   android:textSize="@dimen/dimen_20sp"
                   android:textStyle="bold" />

           </LinearLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_weight="9"
                   android:lineSpacingMultiplier="1.5"
                   android:padding="@dimen/dimen_12dp"
                   android:text="@string/num"
                   android:textColor="@color/colorPrimaryText"
                   android:textSize="@dimen/dimen_18sp"
                   android:onClick="dialPhoneNumber"/>

               <View
                   android:layout_width="fill_parent"
                   android:layout_height="@dimen/dimen_2dp"
                   android:background="@color/lineColor"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <ImageView
                   android:contentDescription="@string/visit"
                   android:src="@drawable/ic_web"
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/dimen_50dp"
                   android:paddingLeft="@dimen/dimen_5dp"
                   android:layout_marginTop="@dimen/dimen_12dp"/>

               <TextView

                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_weight="9"
                   android:padding="@dimen/dimen_12dp"
                   android:text="@string/visit"
                   android:textColor="@color/colorPrimaryDark"
                   android:textSize="@dimen/dimen_20sp"
                   android:textStyle="bold" />

           </LinearLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_weight="9"
                   android:lineSpacingMultiplier="1.5"
                   android:padding="@dimen/dimen_12dp"
                   android:autoLink="web"
                   android:text="@string/web"
                   android:textColor="@color/colorPrimaryDark"
                   android:textSize="@dimen/dimen_18sp" />


                  </LinearLayout>

              </android.support.v7.widget.CardView>


          </android.support.v4.widget.NestedScrollView>

          <android.support.design.widget.FloatingActionButton
              android:src="@drawable/ic_action_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:elevation="@dimen/dimen_6dp"
              app:pressedTranslationZ="@dimen/dimen_12dp"
              app:layout_anchor="@id/app_bar_layout"
              app:layout_anchorGravity="bottom|right|end"/>

      </android.support.design.widget.CoordinatorLayout>
