<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#33334d"
    tools:context="com.example.ojasvi.punjabtourguide.MainActivity">

    <TextView
        android:id="@+id/patiala"
        style="@style/CategoryStyle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="130dp"
        android:text="Patiala"
        android:textColor="#800000"
        android:background="#ffe6e6"/>

    <TextView
        android:id="@+id/jalandhar"
        style="@style/CategoryStyle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Jalandhar"
        android:textColor="#800000"
        android:background="#ffccff"/>

    <TextView
        android:id="@+id/chandigarh"
        style="@style/CategoryStyle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Chandigarh"
        android:textColor="#800000"
        android:background="#ffcccc"/>

    <TextView
        android:id="@+id/amritsar"
        style="@style/CategoryStyle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Amritsar"
        android:textColor="#800000"
        android:background="#ccccff"/>

</LinearLayout>