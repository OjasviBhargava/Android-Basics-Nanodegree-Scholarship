<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_alignParentStart="true"
            android:id="@+id/dest_title"
            android:text="@string/famous_destinations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/locale"
            android:src="@drawable/ic_add_location_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/dest_image"
            android:contentDescription="@string/custom_image"
            android:scaleType="center"
            android:layout_below="@id/dest_title"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_120dp"/>

        <TextView
            android:layout_toEndOf="@id/dest_image"
            android:padding="@dimen/dimen_4dp"
            android:textSize="@dimen/text_18sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/dest_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:gravity="center_horizontal"
            android:maxEms="7"
            android:text="@string/lorem_ipsum_text_here" />

    </RelativeLayout>
</android.support.v7.widget.CardView>